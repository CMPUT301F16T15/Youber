<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/user_info_dlg">

    <!--this should be the username-->
    <TextView
        android:id="@+id/usernameInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/dummy_string"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/phoneNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameInfoTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/phone_number_title"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/phoneNumberLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameInfoTitle"
        android:layout_toRightOf="@+id/phoneNumberTitle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/dummy_string"
        android:textSize="16dp"
        android:onClick="onPhoneNumberClick" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumberTitle"
        android:layout_marginLeft="10dp"
        android:text="@string/email_title"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/emailLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumberTitle"
        android:layout_toRightOf="@+id/emailTitle"
        android:layout_marginLeft="2dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/dummy_string"
        android:textSize="16dp"
        android:onClick="onEmailClick" />
</RelativeLayout>