<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@android:style/Theme.Holo"
    tools:context="com.youber.cmput301f16t15.youber.gui.SignUpActivity">


    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@color/black"

        android:ems="10"
        android:id="@+id/usernameInput"
        android:background="@color/lightGreen"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/emailInput"
        android:layout_alignStart="@+id/emailInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateofBirthInput"
        android:textColor="@color/black"
        android:background="@color/lightGreen"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lastNameInput"
        android:layout_alignStart="@+id/lastNameInput"
        android:hint="@string/date_of_birth_hint"/>

    <EditText
        android:layout_width="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneInput"
        android:textColor="@color/black"
        android:background="@color/lightGreen"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/dateofBirthInput"
        android:layout_alignStart="@+id/dateofBirthInput"
        android:hint="@string/phone_num_hint"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:ems="10"
        android:id="@+id/lastNameInput"
        android:background="@color/lightGreen"
        android:layout_centerVertical="true"
        android:layout_below="@+id/firstnameInput"
        android:layout_alignStart="@+id/usernameInput"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:ems="10"
        android:background="@color/lightGreen"
        android:id="@+id/firstnameInput"
        android:layout_height="35sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/usernameInput"

        android:layout_alignStart="@+id/usernameInput" />

    <Button
        android:text="CREATE ACCOUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:backgroundTint="@color/grey"
        android:textColor="@color/black"
        android:id="@+id/createNewUser"
        android:layout_alignEnd="@+id/phoneInput"
        android:layout_alignStart="@+id/textView4" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignTop="@+id/userSignupText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lightGreen"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:background="@color/lightGreen"
        android:layout_marginTop="47dp"
        android:textColor="@color/black"
        android:layout_below="@+id/userSignupText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:hint="@string/email_hint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text="Date of Birth:"
        android:textSize="18sp"
        android:layout_above="@+id/phoneInput"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:layout_above="@+id/dateofBirthInput"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_above="@+id/lastNameInput"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="Username: *"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_above="@+id/firstnameInput"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="Email: *"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_above="@+id/usernameInput"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Phone #: *"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/phoneInput"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="NEW USER SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userSignupText"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="* indicates required field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView7"
        android:textSize="10sp"
        android:textColor="@color/grey"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/createNewUser" />

</RelativeLayout>
