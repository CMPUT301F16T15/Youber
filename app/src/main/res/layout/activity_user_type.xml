<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@android:style/Theme.Holo"
    tools:context="com.youber.cmput301f16t15.youber.cmput301f16t15.youber.activities.UserTypeActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lightGreen"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_width="match_parent" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="Please select user type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/userType"
        android:layout_above="@+id/driverButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="DRIVER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverButton"
        android:textColor="@color/black"
        android:background="@color/lightGreen"
        android:layout_below="@+id/riderButton"
        android:layout_alignStart="@+id/riderButton"
        android:layout_marginTop="13dp"
        android:layout_alignEnd="@+id/riderButton" />

    <Button
        android:text="RIDER"
        android:layout_height="wrap_content"
        android:id="@+id/riderButton"
        android:layout_width="175dp"
        android:textColor="@color/black"
        android:background="@color/lightGreen"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
