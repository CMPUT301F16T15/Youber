<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.youber.cmput301f16t15.youber.gui.MainActivity"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/centerDummyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/start_lat_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/centerDummyView"
        android:textSize="12dp"
        android:hint="@string/start_lat_title"/>

    <EditText
        android:id="@+id/start_lon_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/centerDummyView"
        android:textSize="12dp"
        android:hint="@string/start_lon_title" />

    <EditText
        android:id="@+id/end_lat_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/centerDummyView"
        android:layout_below="@+id/start_lat_edit"
        android:textSize="12dp"
        android:hint="@string/end_lat_title"/>

    <EditText
        android:id="@+id/end_lon_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/centerDummyView"
        android:layout_below="@+id/start_lat_edit"
        android:textSize="12dp"
        android:hint="@string/end_lon_title" />

    <Button
        android:id="@+id/newRequestButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/new_request_btn"
        android:background="@color/lightGreen"
        android:textColor="@android:color/white"
        android:onClick="onNewRequestBtnClick" />

    <Button
        android:text="Clear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/clear_button"
        android:onClick="clearMap"
        android:background="@color/lightGreen"
        android:textColor="@android:color/white"
        />

</RelativeLayout>
